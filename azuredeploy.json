{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Simple Azure OpenAI + Chainlit with unique naming"
  },
  "parameters": {
    "baseName": {
      "type": "string",
      "defaultValue": "chainlit",
      "metadata": {
        "description": "Base name for resources"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "eastus",
      "allowedValues": [
        "eastus",
        "westeurope",
        "eastus2"
      ],
      "metadata": {
        "description": "Azure region"
      }
    }
  },
  "variables": {
    "randomString": "[substring(uniqueString(resourceGroup().id, deployment().name), 0, 8)]",
    "timestamp": "[substring(replace(utcNow(), ':', ''), 8, 6)]",
    "uniqueId": "[concat(variables('randomString'), variables('timestamp'))]",
    "openAIName": "[concat(parameters('baseName'), '-ai-', variables('uniqueId'))]",
    "containerAppName": "[concat(parameters('baseName'), '-app-', variables('uniqueId'))]",
    "environmentName": "[concat(parameters('baseName'), '-env-', variables('uniqueId'))]",
    "workspaceName": "[concat(parameters('baseName'), '-ws-', variables('uniqueId'))]"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "[variables('workspaceName')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        }
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts",
      "apiVersion": "2023-05-01",
      "name": "[variables('openAIName')]",
      "location": "[parameters('location')]",
      "kind": "OpenAI",
      "sku": {
        "name": "S0"
      },
      "properties": {
        "customSubDomainName": "[variables('openAIName')]"
      }
    },
    {
      "type": "Microsoft.CognitiveServices/accounts/deployments",
      "apiVersion": "2023-05-01",
      "name": "[concat(variables('openAIName'), '/gpt-4o')]",
      "dependsOn": [
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAIName'))]"
      ],
      "properties": {
        "model": {
          "format": "OpenAI",
          "name": "gpt-4o",
          "version": "2024-08-06"
        }
      },
      "sku": {
        "name": "Standard",
        "capacity": 10
      }
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2022-10-01",
      "name": "[variables('environmentName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('workspaceName'))]"
      ],
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('workspaceName'))).customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('workspaceName')), '2022-10-01').primarySharedKey]"
          }
        }
      }
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2022-10-01",
      "name": "[variables('containerAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.App/managedEnvironments', variables('environmentName'))]",
        "[resourceId('Microsoft.CognitiveServices/accounts', variables('openAIName'))]"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('environmentName'))]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": 8000
          }
        },
        "template": {
          "containers": [
            {
              "name": "chainlit",
              "image": "samaea/chainlit-azure-openai:latest",
              "env": [
                {
                  "name": "AZURE_OPENAI_ENDPOINT",
                  "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', variables('openAIName'))).endpoint]"
                },
                {
                  "name": "AZURE_OPENAI_API_KEY",
                  "value": "[listKeys(resourceId('Microsoft.CognitiveServices/accounts', variables('openAIName')), '2023-05-01').key1]"
                },
                {
                  "name": "AZURE_OPENAI_DEPLOYMENT_NAME",
                  "value": "gpt-4o"
                },
                {
                  "name": "AZURE_OPENAI_API_VERSION",
                  "value": "2024-08-01-preview"
                }
              ],
              "resources": {
                "cpu": 0.5,
                "memory": "1Gi"
              }
            }
          ],
          "scale": {
            "minReplicas": 1,
            "maxReplicas": 1
          }
        }
      }
    }
  ],
  "outputs": {
    "uniqueId": {
      "type": "string",
      "value": "[variables('uniqueId')]"
    },
    "resourceNames": {
      "type": "string",
      "value": "[concat('OpenAI: ', variables('openAIName'), ' | Container App: ', variables('containerAppName'))]"
    },
    "containerAppUrl": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.App/containerApps', variables('containerAppName'))).configuration.ingress.fqdn)]"
    },
    "instructions": {
      "type": "string",
      "value": "✅ 모든 리소스가 고유한 이름으로 생성되었습니다! Container App URL을 클릭하세요."
    }
  }
}
